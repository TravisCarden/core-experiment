{
    "name": "n/a",
    "description": "A project template for doing Drupal core and contrib work.",
    "license": "proprietary",
    "require": {
        "acquia/drupal-contrib-installer": "*@dev",
        "composer/installers": "^1.0@dev",
        "cweagans/composer-patches": "^1.6.7",
        "drupal/drupal": "8.8.2"
    },
    "config": {
        "preferred-install": {
            "drupal/drupal": "source"
        }
    },
    "extra": {
        "enable-patching": true,
        "installer-disable": ["drupal"]
    },
    "repositories": {
        "installer-plugin": {
            "type": "path",
            "url": "../drupal-contrib-installer"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "scripts": {
        "post-update-cmd": "mkdir -p contrib/modules && test -e ./web/modules/contrib || ln -sf ../../contrib/modules/ ./web/modules/contrib"
    },
    "minimum-stability": "dev"
}
